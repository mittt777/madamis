{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    },
    "ignore": ["./src/index.tsx"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  }
}
